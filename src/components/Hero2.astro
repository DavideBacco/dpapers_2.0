---
export interface Props {
  title?: string;
  image?: string | any; // TODO: find HTMLElementProps
  href?: string;
  btntxt?: string;
  par?: string;
}

const {
  title = await Astro.slots.render('title'),
  image = await Astro.slots.render('image'),
  href = await Astro.slots.render('href'),
  btntxt = await Astro.slots.render('btntxt'),
  par = await Astro.slots.render('par'),
} = Astro.props;
---

            <div class="hero-image">
                <h2 class="hero-title">{title}</h2>
                <p class="hero-p">{par}</p>
                <div class="btn-position">
                    <a href={href} class="btn">{btntxt}</a>
                </div>
            </div>

<style>
    
    .hero-image{
        position: relative;
        background-image: url("src/assets/images/hero2.jpg");
        height: 30vh;
        width: 100%;
        background-size: cover; 
        background-position: center;
        background-repeat: no-repeat;
        display: flex;
        flex-direction: column;
        
    }
    .hero-title{
        font-size: 2em;
        font-weight: bold;
        text-align: left;
        padding-left: 1em;
        color: white;
        margin-bottom: 0;
    }

    .hero-p{
        text-align: left;
        padding-left: 2em;
        color: white;
        width: 60%;
    }

    .btn-position{
        text-align: left;
        padding-left: 2em;
    }
    .btn{
        box-shadow:inset 0px 1px 0px 0px #54a3f7;
        background:linear-gradient(to bottom, #007dc1 5%, #0061a7 100%);
        background-color:#007dc1;
        border-radius:3px;
        border:1px solid #124d77;
        cursor:pointer;
        color:#ffffff;
        font-size:18px;
        padding:6px 24px;
        text-decoration:none;
        text-shadow:0px 1px 0px #154682;
    }
    .btn:hover {
        background:linear-gradient(to bottom, #0061a7 5%, #007dc1 100%);
        background-color:#0061a7;
    }
    .btn:active {
        position:relative;
        top:1px;
    }
    

</style>