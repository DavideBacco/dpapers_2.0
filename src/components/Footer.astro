---
export interface Props {
	img: string;
    altText: string;
	link1: string;
    link1Text: string;
	link2: string;
    link2Text: string;
	link3: string;
    link3Text: string;
}

const { img, altText, link1, link1Text, link2, link2Text, link3, link3Text } = Astro.props;
---

<footer>
    <div class="footer-top">
      <img src={img} alt={altText}>
      <nav>
        <ul>
          <li><a href={link1}>{link1Text}</a></li>
          <li><a href={link2}>{link2Text}</a></li>
          <li><a href={link3}>{link3Text}</a></li>
        </ul>
      </nav>
    </div>
    <div class="footer-bottom">
      <p>Copyright &copy; 2023</p>
      <div class="social-links">
        <span>Seguici su:</span>
        <a href="#"><img src="src/images/16.png"></a>
        <a href="#"><img src="src/images/16.png"></a>
        <a href="#"><img src="src/images/16.png"></a>
      </div>
    </div>
  </footer>
  <style>
    footer {
  background-color: white;
  color: #000000;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px;
  margin: 0px;
}
    span {
        padding-right: 10px;
    }
    .footer-top {
  display: flex;
  justify-content: space-between;
  width: 80%;
  padding-bottom: 30px;
  border-bottom: solid 1px black;
}

    nav ul {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
}

    nav li {
  margin-right: 20px;
}

    .footer-bottom {
  display: flex;
  justify-content: space-between;
  width: 80%;
  padding-top: 20px;
}
    a{
    color: black;
    text-decoration: none;
}
    .social-links a {
  font-size: 20px;
  color: #fff;
  margin-right: 20px;
  transition: all 0.3s ease;
}

    .social-links a:hover {
  color: #1E90FF;
}

    @media (max-width: 600px) {
  .footer-top {
    flex-direction: column;
    align-items: center;
  }

    nav {
    text-align: center;
  }

    .footer-bottom {
    flex-direction: column;
    align-items: center;
  }
}
  </style>